                  <datalist id="datalistOptions"></datalist>
                </div>
                <div class="col-auto col-md-2">
                  <button type="submit" class="btn btn-primary" onclick="selectArtist()">Seleziona</button>
                </div>
              </div>
              <!--Selected items section-->
