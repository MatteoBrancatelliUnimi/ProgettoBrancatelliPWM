<script type="text/javascript">
  document.addEventListener('DOMContentLoaded', ()=>{
    const input = document.getElementById('exampleDataList');
    let dl = document.getElementById('datalistOptions');
    input.addEventListener('keyup', () => {
      //dl.innerHTML = '';
      var filter = input.value;
      fetch('/search/'+filter).then(results => {
        return results.json();
      })
      .then(data => {
        let child = dl.lastElementChild;
        while(child){
          dl.removeChild(child);
          child = dl.lastElementChild;
        }
        data.items.forEach(result => {
          let option = document.createElement('option');
          option.setAttribute('value', result.name);
          option.setAttribute('id', result.id);
          dl.appendChild(option);
        });
      });
    }); 

    input.addEventListener('change', ()=>{
      document.activeElement.blur();
    });
  });
  function selectArtist(){

      const input = document.getElementById('exampleDataList');
      const dl = document.getElementById('datalistOptions');
      const list = document.getElementById('selectedArtists');
      var opt = document.querySelectorAll('option[value="'+input.value+'"]');
      var child = dl.lastElementChild;

      if(list.getElementsByTagName('li').length == 3){
        alert('Nope');
      }else{
        while(child){
          dl.removeChild(child);
          child = dl.lastElementChild;
        }
        var artist = opt[0].id;
        input.value = '';
        fetch('/getArtist/'+artist).then(results => {
          return results.json();
        }).then(data => {
          document.getElementById('msg').classList.add('d-none');
          let el = document.createElement('li');
          let closeBtn = document.createElement('button');

          el.setAttribute('class', 'list-group-item');
          el.setAttribute('id', data.uri);
          el.innerText = data.name;
          list.appendChild(el);

          closeBtn.setAttribute('type', 'button');
          closeBtn.setAttribute('class', 'btn-close float-end');
          closeBtn.setAttribute('aria-label', 'Close');
          closeBtn.setAttribute('onclick', 'removeArtist(this.parentNode)');
          el.appendChild(closeBtn);

          //Create button is now clickable
          document.getElementById('btnCreate').classList.remove('disabled');
        });
      }

    }

    function updateTextValue(val){
      document.getElementById('rangeValue').textContent = val;
    }

    function removeArtist(el){
        var artists = document.getElementById('selectedArtists').getElementsByTagName('li');
        var length = artists.length;

        for(i=0; i<length; i++){
          console.log(artists[i]);
          if(artists[i].innerText == el.innerText){
            artists[i].remove();
            break;
          }
        }

        if(artists.length == 0){
          document.getElementById('msg').classList.toggle('d-none');
          document.getElementById('btnCreate').classList.add('disabled');
        }
    }

    function generatePlaylist(){
      //get playlist parameters
      var title = document.getElementById('titleInput').value,
      description = document.getElementById('descriptionTextArea').value,
      numEl = parseInt(document.getElementById('numEl').value),
      isPublic = document.getElementById('isPublic').checked,
      img = document.getElementById('coverImg').value;

      var artists = [];
      var lista = document.getElementById('selectedArtists').getElementsByTagName('li');
      var length = lista.length;
      for(i=0; i<length; i++){
        artists.push(lista[i].id);
      }

      let data = {
        title: title,
        description: description,
        numEl: numEl,
        isPublic: isPublic,
        img: img,
        artists: artists
      };
      fetch('/createPlaylist/'+JSON.stringify(data)).then(response => {
        return JSON.parse(response);
      }).then(data => {
        alert(data);
      }); 


    }
</script>
